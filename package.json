{
  "name": "interview-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "npm run build:client",
    "build:client": "cd ../interview-client && npm ci && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"cd ../interview-client && npm run dev\"",
    "test": "echo \"No tests specified\" && exit 0",
    "docker:build": "docker build -t interview-app .",
    "docker:run": "docker run -p 4000:4000 interview-app"
  },
  "dependencies": {
    "@clerk/express": "^1.7.43",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "inngest": "^3.44.4",
    "mongoose": "^8.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.0"
  }
}
